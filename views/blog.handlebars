<div class="text">
	<div class="container blogBoxCont">
		<div class="row headerRow">
			<div class="col-8">
				<h2 class="blogTitle text-uppercase">{{title}}</h2> {{-- Display blog title --}}
			</div>
			<div class="col-4">
				<p class="blogCreate text-right">Created by {{user.username}} on {{format_date date_created}}</p> {{-- Display blog creator and creation date --}}
			</div>
		</div>
		<p class="text-center blogDescTwo">{{description}}</p> {{-- Display blog description --}}
	</div>	
</div>

{{!-- Check if the user is logged in --}}
{{#if logged_in}}

<form class="new-comment-form formCont d-flex flex-wrap justify-content-center" data-blogid={{id}}> {{-- Form to add new comments --}}
	<div class="textAreaCont p-2">
		<textarea id='comment_description' name="comment-body"
		placeholder="Enter a comment here..."
		cols="30"
		rows="2"></textarea>
	</div>
	<div class="btnComment p-2">
		<button class="button btn btn-success" type="submit">Add Comment</button> {{-- Button to submit the comment --}}
	</div>
</form>

{{/if}}

<h2 class="text-center">Comments</h2> {{-- Title for comments section --}}
{{!-- Iterate over each comment --}}
{{#each comments as |comment|}}
<div class="commentCont">
	<p class="text-center commentText">{{comment.comment_description}}</p> {{-- Display comment content --}}
	<p class="text-center commentOwner"><span>~</span>Created by {{comment.user.username}} on {{format_date date_created}}<span>~</span></p> {{-- Display comment creator and creation date --}}
</div>
{{/each}}

<script src="/js/comments.js"></script> {{-- Include JavaScript file for comment functionality --}}
